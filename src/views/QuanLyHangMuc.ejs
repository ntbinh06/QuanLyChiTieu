<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous"
        referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="../css/QuanLyNguoiDung.css" />
    <link rel="stylesheet" href="../css/XemChiTietUser.css" />
    <title>Quản Lý Hạng Mục</title>
</head>
<body>
    <aside>
        <div class="sidebar">
            <div class="sidebar_title">
                <div style="margin-right: 10px;">
                    <img src="../images/coins_1.jpg" alt="User Avatar">
                </div>
                <div>
                    <h2>NGÂN SÁCH<br>NHANH CHÓNG</h2>
                </div>
            </div>
            <ul>
                <li><a href="/TrangChu" class="active"><i class="fas fa-home"></i> Trang chủ</a></li>
                <li><a href="/QuanLyNguoiDung"><i class="fas fa-users"></i> Quản lý người dùng</a></li>
                <li><a href="/QuanLyHangMuc"><i class="fas fa-user-cog"></i> Quản lý hạng mục</a></li>
            </ul>
        </div>
    </aside>

    <header>
        <div class="user-icon">
            <img src="../images/user_women.png" alt="User">
        </div>
        <div class="name-admin">
            <span>Administrator</span>
        </div>
        <div class="header-icon">
            <img src="../images/arrow_down.png" alt="icon">
        </div>
    </header>

    <!-- Content -->
    <div class="content">
        <!-- Tìm kiếm Hạng mục -->
        <div class="search-section">
            <input type="text" placeholder="Tìm kiếm" class="search-input" id="search-input">
            <button class="search-button" id="search-button">
                <img src="../images/search_ic.png" alt="Search">
            </button>
        </div>

        <ul class="category-list">
            <% if (categoryList && categoryList.length > 0) { %>
                <% categoryList.forEach(function(category) { %>
                    <li class="category-item">
                        <img src="<%= category.anhHangMuc %>" alt="<%= category.tenHangMuc %>" class="category-image">
                        <div class="category-info">
                            <h3><%= category.tenHangMuc %></h3>
                        </div>
                    </li>
                <% }); %>
            <% } else { %>
                <li>Không có hạng mục nào.</li>
            <% } %>
        </ul>
    </div>

    <!-- JavaScript -->
    <script src="../js/user.js"></script>
</body>
</html>
