<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous"
        referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="../css/HangMucThuNhap.css" />
    <title>Quản Lý Hạng Mục</title>
</head>
<body>
    <aside>
        <div class="sidebar">
            <div class="sidebar_title">
                <div style="margin-right: 10px;">
                    <img src="../images/coins_1.jpg" alt="User Avatar">
                </div>
                <div>
                    <h2>NGÂN SÁCH<br>NHANH CHÓNG</h2>
                </div>
            </div>
            <ul>
                <li class="active">
                    <a href="/TrangChu"><i class="fas fa-home"></i> Trang chủ</a>
                </li>
                <li class="manage-user">
                    <a href="/QuanLyNguoiDung"><i class="fas fa-users"></i> Quản lý người dùng</a>
                
                </li>
                <li class="manage-category">
                    <a href="/HangMucThuNhap" class="main-menu" style="color: #fff;"><i class="fas fa-user-cog"></i> Quản lý hạng mục</a>
                    <!-- Submenu -->
                    <div class="submenu">
                        <a href="/HangMucThuNhap"><i class="fa-regular fa-circle" style="font-size: 14px;"></i>Hạng mục thu nhập</a>
                        <a href="/HangMucChiPhi">Hạng mục chi phí</a>
                    </div>
                </li>
            </ul>
            
        </div>
    </aside>

    <header>
        <div class="user-icon">
            <img src="../images/user_women.png" alt="User">
        </div>
        <div class="name-admin">
            <span>Administrator</span>
        </div>
        <div class="header-icon">
            <img src="../images/arrow_down.png" alt="icon">
        </div>
    </header>

    <!-- Content -->
    <div class="content">
        <!-- Tìm kiếm Hạng mục -->
        <div class="search-section">
            <input type="text" placeholder="Tìm kiếm" class="search-input" id="search-input">
            <button class="search-button" id="search-button">
                <img src="../images/search_ic.png" alt="Search">
            </button>
        </div>


         <!-- Nút mở modal -->
        <button class="open-button" onclick="openModal()">
            <i class="fa-solid fa-plus" style="margin-right: 10px;"></i>
            Thêm hạng mục
        </button>

        <!-- Modal -->
        <div class="modal" id="inputModal">
            <div class="modal-content">
                <h3>Thêm hạng mục thu nhập</h3>
                <!-- Form nhập dữ liệu -->
                <input type="text" id="categoryInput" placeholder="Nhập tên hạng mục" />
                <br><br>
                <button class="submit-button" onclick="submitCategory()">Thêm</button>
                <button class="close-button" onclick="closeModal()">Hủy</button>
            </div>
        </div>

    
        <ul class="category-list">
            <% if (categoryList && categoryList.length > 0) { %>
                <% categoryList.forEach(function(category) { %>
                    <li class="category-item">
                        <div class="category-info">
                            <img src="<%= category.anhHangMuc %>" alt="<%= category.tenHangMuc %>" class="category-image">
                            <p><%= category.tenHangMuc %></p>
                        </div>
                        <div class="category-icon">
                            <a href="#" class="category-icon-edit"><i class="fa-solid fa-pen-to-square" style="color: #000000;"></i></a>
                            <a href="#" class="category-icon-delete"><i class="fa-solid fa-trash-can" style="color: #000000;"></i></i></a>
                        </div>
                    </li>
                <% }); %>
            <% } else { %>
                <li>Không có hạng mục nào.</li>
            <% } %>
        </ul>
    </div>

    <!-- JavaScript -->
    <script src="../js/themThuNhap.js"></script>
</body>
</html>
