<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <link rel="stylesheet" href="../css/QuanLyNguoiDung.css" />
    <title>Quản lý người dùng</title>
</head>
<body>
    <!-- Sidebar -->
    <aside>
        <div class="sidebar">
            <div class="sidebar_title">
                <div style="margin-right: 10px;">
                    <img src="../images/coins_1.jpg" alt="User Avatar">
                </div>
                <div>
                    <h2>NGÂN SÁCH<br>NHANH CHÓNG</h2>
                </div>
            </div>
            <ul>
                <li><a href="/TrangChu" class="active"><i class="fas fa-home"></i> Trang chủ</a></li>
                <li><a href="/QuanLyNguoiDung"><i class="fas fa-users"></i> Quản lý người dùng</a></li>
                <li><a href="/QuanLyHangMuc"><i class="fas fa-user-cog"></i> Quản lý hạng mục</a></li>
            </ul>
        </div>
    </aside>

    <!-- Header -->
    <header>
        <div class="user-icon">
            <img src="../images/user_women.png" alt="User">
        </div>
        <div class="name-admin">
            <span>Administrator</span>
        </div>
        <div class="header-icon">
            <img src="../images/arrow_down.png" alt="icon">
        </div>
    </header>

    <!-- Content -->
    <div class="content">
      <!-- Tìm kiếm người dùng -->
<div class="search-section">
    <input type="text" placeholder="Tìm kiếm" class="search-input" id="search-input">
    <button class="search-button" id="search-button">
        <img src="../images/search_ic.png" alt="Search">
    </button>
</div>

<script>
    document.getElementById('search-button').addEventListener('click', function() {
        const searchInput = document.getElementById('search-input').value;
        // Gửi yêu cầu tìm kiếm đến server
        window.location.href = `/tim-kiem?name=${encodeURIComponent(searchInput)}`;
    });
</script>

        <!-- Danh sách người dùng -->
        <ul class="user-list" id="userList">
            <!-- Lặp qua userList và hiển thị dữ liệu -->
            <% if (userList && userList.length > 0) { %>
                <% userList.forEach(function(user) { %>
                    <li>
                        <div class="user-avatar">
                            <img src="<%= user.avatar %>" alt="User Avatar">
                        </div>
                        <div class="user-info">
                            <div class="user-name"><%= user.name %></div>
                            <div class="user-email"><%= user.email %></div>
                        </div>
                        <div class="user-icon">
                            <a href="/XemChiTietUser/<%= user.id %>" class="user-icon-eye"><i class="fa-solid fa-eye"></i></a>
                            <a href="#" class="user-icon-lock" data-locked="<%= user.locked %>" id="lock-toggle-<%= user.id %>" 
                               data-user-id="<%= user.id %>">
                                <i class="fa-solid <%= user.locked ? 'fa-lock' : 'fa-unlock' %>"></i>
                            </a>
                        </div>
                    </li>
                <% }); %>
            <% } else { %>
                <li>Không có người dùng nào.</li>
            <% } %>
        </ul>
    </div>

    <!-- JavaScript -->
    <script src="../js/lockuser.js"></script>
</body>
</html>
<script>
    async function toggleLock(userId, currentLock) {
      const confirmation = confirm(
        currentLock
          ? "Bạn có chắc muốn mở khóa tài khoản này?"
          : "Bạn có chắc muốn khóa tài khoản này?"
      );
  
      if (confirmation) {
        try {
          const response = await fetch('/toggleLock', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ userId, lock: !currentLock }),
          });
  
          if (response.ok) {
            alert('Cập nhật trạng thái thành công!');
            window.location.reload(); // Tải lại trang để cập nhật giao diện
          } else {
            alert('Cập nhật trạng thái thất bại!');
          }
        } catch (error) {
          console.error('Lỗi khi cập nhật trạng thái:', error);
          alert('Có lỗi xảy ra, vui lòng thử lại sau.');
        }
      }
    }
  </script>
  