<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="30dp"
    android:backgroundTint="#E1E1E1"
    android:layout_marginRight="30dp"
    android:background="@drawable/round_corner_20">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imgHangMuc"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/shopping_cart"/>


        <TextView
            android:id="@+id/tenHangMuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mua sắm"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_18pt_regular"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"/>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/soTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_18pt_bold"
                android:text="2.000.000 đ"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end">

                <TextView
                    android:id="@+id/conlai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/inter_18pt_regular"
                    android:text="Còn lại"
                    android:textColor="@color/black_50"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tienConLai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/inter_18pt_regular"
                    android:text="1.700.000 đ"
                    android:textColor="@color/black_50"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pgbTienTrinh"
        android:layout_width="240dp"
        android:layout_height="8dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progress_bar"
        android:max="100"
        android:progress="50"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>