<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">

    <!-- Header Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:background="@drawable/header"
        android:backgroundTint="@color/deep_bluepurple">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:background="?attr/selectableItemBackground"
            android:layout_marginStart="30dp"
            android:layout_marginTop="26dp"
            android:padding="16dp"
            android:contentDescription="@string/img1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngân sách"
            android:textSize="24sp"
            android:fontFamily="@font/inter_18pt_bold"
            android:textColor="@color/white"
            android:layout_marginTop="36dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="110dp">

        <ImageButton
            android:id="@+id/btn_arrow_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="70dp"/>

        <TextView
            android:id="@+id/current_month"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Tháng này"
            android:textSize="18sp"
            android:fontFamily="@font/inter_18pt_regular"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/btn_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="170dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5 M"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:fontFamily="@font/inter_18pt_regular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tổng ngân sách"
                        android:textSize="12sp"
                        android:textColor="@color/black_50"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/inter_18pt_regular"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="43dp"
                    android:background="#000000"
                    android:layout_marginLeft="10dp"
                    />

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2.6 M"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:fontFamily="@font/inter_18pt_regular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tổng đã chi"
                        android:textSize="12sp"
                        android:textColor="@color/black_50"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/inter_18pt_regular"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="43dp"
                    android:background="#000000"
                    android:layout_marginLeft="5dp" />

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="29 ngày"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:fontFamily="@font/inter_18pt_regular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Đến cuối tháng"
                        android:textSize="12sp"
                        android:textColor="@color/black_50"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/inter_18pt_regular"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/border_60"
                android:backgroundTint="@color/deep_bluepurple"
                android:text="Tạo ngân sách"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_18pt_regular"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lvNganSach"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:divider="@null"
                android:layout_marginBottom="40dp">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>