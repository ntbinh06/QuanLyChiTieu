<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/xemchuyentien"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/header"
        android:backgroundTint="@color/deep_bluepurple"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="CHI TIẾT CHUYỂN TIỀN"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    <TableLayout
        android:layout_width="370dp"
        android:layout_height="400dp"
        android:layout_marginTop="160dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/frame"
        android:backgroundTint="@color/lightgreen">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:text="Giá trị : "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/giatri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="10.000.000 đ"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="30dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:text="Từ  : "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/tu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Ví"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="30dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:text="Đến: "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/den"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Tài khoản ngân hàng"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="30dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:text="Ngày :"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/ngay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="23/03/2024"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="30dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:text="Ghi chú :"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/ghichu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="_"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="30dp"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnSua"
        android:layout_width="297dp"
        android:layout_height="56dp"
        android:layout_marginTop="600dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/lgreen"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:text="Sửa chuyển tiền"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnquaylai"
        android:layout_width="297dp"
        android:layout_height="56dp"
        android:layout_marginTop="670dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/lgreen"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:text="Quay lại"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAllCaps="false"/>
</RelativeLayout>