<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tenTaiKhoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ví"
                android:textSize="16sp"
                android:textColor="@color/bluepurple_80"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_18pt_bold"
                android:gravity="start"/>

            <TextView
                android:id="@+id/tienTaiKhoan"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="8.000.000 đ"
                android:textSize="14sp"
                android:textColor="@color/green"
                android:fontFamily="@font/inter_18pt_regular"
                android:gravity="right"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lần sử dụng cuối: "
            android:textSize="12sp"
            android:textColor="@color/black_50"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_18pt_regular"/>

        <TextView
            android:id="@+id/lansudungCuoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22/09/2024"
            android:textSize="12sp"
            android:textColor="@color/black_50"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/inter_18pt_regular"/>

    </LinearLayout>

</LinearLayout>